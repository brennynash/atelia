{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      "PRODUCTION_SETUP.md",
      "CLOUDINARY_SETUP.md",
      "CLOUDINARY_QUICKSTART.md",
      "DEPLOYMENT_GUIDE.md",
      "README.md",
      "start-server.bat",
      "initialize-database.html",
      "firestore.rules",
      "storage.rules"
    ],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/admin",
        "destination": "/admin.html"
      },
      {
        "source": "/projects",
        "destination": "/projects.html"
      },
      {
        "source": "/services",
        "destination": "/services.html"
      },
      {
        "source": "/news",
        "destination": "/news.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|jpg|jpeg|png|webp|gif|svg|woff|woff2)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "**/*.@(html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ],
    "cleanUrls": true
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}

